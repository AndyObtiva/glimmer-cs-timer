#!/usr/bin/env ruby

if ENV['GLIMMER_APP_LAUNCHER'] == 'server'
  load File.expand_path('../glimmer-cs-timer-server', __FILE__)
else
  lib_path = File.expand_path('../../lib', __FILE__)
  $LOAD_PATH.unshift(lib_path) unless $LOAD_PATH.include?(lib_path)
  
  require 'launcher/glimmer/timer/client'
  
  Glimmer::Timer::Client.new.start
end
